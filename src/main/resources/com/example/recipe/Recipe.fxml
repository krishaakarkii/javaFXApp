<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.recipe.RecipeController">
    <Label text="Recipe Manager" style="-fx-font-size: 20px;" />

    <TableView fx:id="recipeTable" prefHeight="200">
        <columns>
            <TableColumn text="Recipe Name" fx:id="nameColumn" prefWidth="150" />
            <TableColumn text="Ingredients" fx:id="ingredientsColumn" prefWidth="300" />
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Add Recipe" onAction="#handleAddRecipe" />
        <Button text="Edit Recipe" onAction="#handleEditRecipe" />
        <Button text="Delete Recipe" onAction="#handleDeleteRecipe" />
    </HBox>

    <Button text="Back to Main Menu" onAction="#handleBack" />
</VBox>
